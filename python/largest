def find_largest_number(numbers):
    if not numbers:  # Check if the list is empty
        return None
    return max(numbers)  # Return the largest number in the list

# Example usage
numbers_list = [3, 5, 1, 8, 2]
largest_number = find_largest_number(numbers_list)
print(largest_number)  # Output: 8

empty_list = []
largest_number_empty = find_largest_number(empty_list)
print(largest_number_empty)  # Output: None